            <div class="content" data-slug="css">

              <h3><strong>CSS Example</strong></h3>

              <div data-alert class="alert-box">
                This is a standard alert.
                <a href="" class="close">&times;</a>
              </div>



<%= code_example '
<div class="alert-box" data-alert>
  <!-- Replace with your content -->
