    <script src="<%= asset_path %>/vendor/jquery.js"></script>
    <script src="<%= asset_path %>/docs.js"></script>
    <script src="<%= asset_path %>/off-canvas.js"></script>
    <script>
      $(document)
      <% if @joyride %>
        .foundation()
        .foundation('joyride', 'start');
      <% else %>
        .foundation();
      <% end %>

      $.ajax({
        url: '//zurb.com/jobs/widgets/jobs.json?limit=3',
        dataType: 'jsonp',
        success: function(data) {
          var list = $("<ul></ul>");
          $.each(data.jobs, function(idx, job) {
            var item = "<li><a href='"+job.url+"' target='_blank'>" +
              "<span class='positionTitle'>"+job.title+"</span>" +
              "<span class='location'><span class='companyName'>"+job.company_name+"</span> in "+job.location+"</span>" +
              "</a>" +
              "</li>";
            list.append(item);
          });
            // Customize This
          $("#zurbJobsWidget").html(list);
        }
      });

      // For Kitchen Sink Page
      $('#start-jr').on('click', function() {
        $(document).foundation('joyride','start');
      });

      // Mega Components Menu
      $(document).ready(function() {

        $('.all-elements').height($(window).height());

        $('#allElements').on('click', function(e) {
          e.preventDefault();
          $('.all-elements').fadeIn(200).addClass('open');
          $('body').css('position','fixed');
        });

        $('.close-all-elements').on('click', function() {
          $('.all-elements').fadeOut(200).removeClass('open');
          $('body').css('position','');
        });

        $(window).resize(function() {
          $('.all-elements').height($(window).height());
        });

      });
    </script>
